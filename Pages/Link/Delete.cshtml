@page
@model LinkBox.Pages.Link.DeleteModel
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">

            <div class="col-md-3 column ">
                <partial name="_Menu" />
            </div>

            <div class="col-md-9 column">
                <div class="alert alert-success alert-dismissable">
                    <h4>
                        删除链接
                    </h4>
                </div>

                <form method="post">

                    <div class="form-group">
                        <p>确认要删除该链接吗？</p>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Link.Id" class="control-label"></label>
                        <input asp-for="Link.Id" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Link.Id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Link.Title" class="control-label"></label>
                        <input asp-for="Link.Title" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Link.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Link.Url" class="control-label"></label>
                        <input asp-for="Link.Url" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Link.Url" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input asp-for="Link.IsCompileImmediately" type="checkbox" />
                        <label asp-for="Link.IsCompileImmediately" class="control-label"></label>
                        <span asp-validation-for="Link.IsCompileImmediately" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-default" id="sub1">确定</button>
                </form>
            </div>
        </div>
    </div>
</div>