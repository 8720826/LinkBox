@page
@model LinkBox.Pages.Link.ImportModel
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column" id="toptital">

            <div class="col-md-3 column ">
                <partial name="_Menu" />
            </div>

            <div class="col-md-9 column" id="right">

                <div id="addpeifang">
                    <div class="alert alert-success alert-dismissable">
                        <h4>
                            链接管理 >> 导入
                        </h4>
                    </div>

                    <form enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                                <option value="">请选择</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="BookmarkFile" class="custom-file-input form-control">
                            <label class="custom-file-label">选择文件</label>
                        </div>



                        <button type="submit" class="btn btn-default">确定</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>