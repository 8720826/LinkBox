@page
@model LinkBox.Pages.Config.PasswordModel
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column" id="toptital">

            <div class="col-md-3 column ">
                <partial name="_Menu" />
            </div>

            <div class="col-md-9 column" id="right">

                <div id="addpeifang">
                    <div class="alert alert-success alert-dismissable">
                        <h4>
                            修改密码
                        </h4>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Config.Password" class="control-label"></label>
                            <input asp-for="Config.Password" class="form-control" />
                            <span asp-validation-for="Config.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Config.NewPassword" class="control-label"></label>
                            <input asp-for="Config.NewPassword" class="form-control" />
                            <span asp-validation-for="Config.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Config.ConfirmPassword" class="control-label"></label>
                            <input asp-for="Config.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Config.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-default" id="sub1">确定</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>